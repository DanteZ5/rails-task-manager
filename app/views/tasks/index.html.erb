<h1>Tasks list</h1>
<%= link_to'Create a new Task', new_task_path, class: 'btn btn-primary' %>


  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to(task.title, task_path(task.id)) %> |
        <%= link_to edit_task_path(task.id) do %>
        <i class="fas fa-edit"></i>
        <% end %> |
        <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
        <% end %>
        <% if task.completed %>
          | <i class="fas fa-check green"></i>
        <% end %>
    </li>
    <% end %>
  </ul>

